html
   head
        title ToDo App
        style 
            include ../stylesheets/style.css
        script 
            include ../eventScript.js
   body
        if(type === "error")
            h4 #{message}
        div 
            button(onclick="window.location.href='/add'") Add To-Do List
        table
            tr
                th(style="width:10%") ID
                th(style="width:30%") To-Do
                th(style="width:20%") Created
                th(style="width:20%") Due By
                th(style="width:10%") Completed?
                th(style="width:10%") Action

            each element,index in toDoArray
                tr
                    td=element.ID
                    td= element.toDoName
                    td= new Date(element.create).toLocaleString()
                    td= element.dueDate ? new Date(element.dueDate).toLocaleString() : "N/A"
                    td(value = `${element.complete}` class = "completedInput")= formatComplete(element.complete)
                    td
                        input(type="submit" method ="POST" action= "/edit/:id" value="Edit" onclick=`window.location.href='/edit/${element.ID}'`)
                 

