html
    head
        title ToDo App
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous")
        style 
            include ../stylesheets/style.css
        script 
            include ../eventScript.js
    body
        if(type === "error")
            h4 #{message}
        div 
            button(onclick="window.location.href='/add'" id ="todoButton") Add To-Do List
        table.table
            tr
                th(style="width:10%") ID
                th(style="width:30%") To-Do
                th(style="width:20%") Created
                th(style="width:20%") Due By
                th(style="width:10%") Completed?
                th(style="width:10%") Action

            each element,index in toDoArray
                tr
                    td=element.ID
                    td= element.toDoName
                    td= new Date(element.create).toLocaleString()
                    td= element.dueDate ? new Date(element.dueDate).toLocaleString() : "N/A"
                    td(value = `${element.complete}` class = "completedInput")= formatComplete(element.complete)
                    td
                        input(type="submit" method ="POST" action= "/edit/:id" value="Edit" onclick=`window.location.href='/edit/${element.ID}'`)


        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous") 
